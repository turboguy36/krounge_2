<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabwidget_group_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<TextView
	        android:id="@+id/tabwidget_group_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:text="@string/tab_name_group"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@android:color/white"
	        android:textSize="15sp" />
	
    <ImageView
        android:id="@+id/tabwidget_group_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tabwidget_group_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:src="@drawable/tab_icon_group"/>    

</RelativeLayout>